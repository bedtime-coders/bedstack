{
  "name": "bedstack",
  "title": "Bedstack",
  "version": "",
  "description": "RealWorld example app for Bun + ElysiaJS + Drizzle, the stack you don't want to sleep on",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun run --watch src/main.ts",
    "build": "./scripts/build.sh",
    "preview": "./server",
    "test:api": "cross-env APIURL=http://localhost:3000/api ./scripts/api-tests/run-api-tests.sh",
    "test:unit": "bun test",
    "test": "bun test:api && bun test:unit",
    "typecheck": "tsc --noEmit",
    "fix": "biome check --fix",
    "check": "biome check",
    "check:errors": "biome check --diagnostic-level=error",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "db": "docker compose up",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose stop",
    "db:restart": "docker compose restart",
    "db:down": "docker compose down",
    "db:remove": "docker compose down -v",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun drizzle/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:reset": "bun drizzle/reset.ts",
    "db:config": "docker compose config"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@sinclair/typebox": "0.34.41",
    "@yolk-oss/elysia-env": "^3.0.0",
    "chalk": "^5.6.2",
    "drizzle-orm": "^0.44.5",
    "elysia": "^1.4.5",
    "http-status-codes": "^2.3.0",
    "jose": "^6.1.0",
    "postgres": "^3.4.5",
    "radashi": "^12.6.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^24.4.0",
    "bun-types": "latest",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "pg": "^8.16.3",
    "typescript": "^5.9.2",
    "vitepress": "^1.6.4"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ],
  "overrides": {
    "@sinclair/typebox": "0.34.34"
  }
}
